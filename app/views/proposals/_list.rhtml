<div class="box">
	<h2 class="header">Choose your most important change</h2>
	<div class="body">
		<%- if @list.empty? %>
		<p class="larger">Sorry! There are no Changes to choose from. Consider <%= link_to "proposing a change", new_article_path %>.</p>
		<%- else %>
		<table class="ruler">
			<thead>
				<tr><th></th><th>Title</th><th>Top Priority For</th></tr>
			</thead>
			<tbody class="">
			<%- for article in @list %>
			<tr style="cursor:pointer" onclick="document.location.href='<%= url_for article %>'">
				<td style="width: 33px; padding-left: 3px;"><%= @width = 30; @article = article; render :partial => 'articles/support_image' %></td>
				<td><%= h article.title %></td>
				<td><%= pluralize article.focus_count, "Person" %></td>
			</tr>
			<%- end %>
			</tbody>
		</table>	
		<%- end %>
	</div>
</div>
