<div class="box tags">
	<div class="header"><h2>Descriptions</h2></div>
	<div class="body" id="t<%= @tag_list.id %>">
	<%= render :partial => 'filters/list_tags', :object => @tag_list %>
	<div id="new_tag">
	<% form_remote_tag :url => { :action => 'add_tag', :id => @tag_list }, :update => "t#{@tag_list.id}" do %>
		<%= text_field_tag 'tag', nil, :size => "10" %>
		<%= submit_tag "Describe" %>
	<% end %>
	</div>
	</div>
</div>