<%- if vote %>
<div class="notice">
	<fb:profile-pic uid="loggedinuser" linked="false"></fb:profile-pic><fb:name uid="loggedinuser" useyou="false" linked="false"></fb:name>
	<p><%= vote_in_english vote %></p>
