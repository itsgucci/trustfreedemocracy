	<%- form_remote_tag :url => {:controller => :communities, :action => :adjust_budget, :id => @community}, :html => {:style => "display:inline", :id => "adjust_budget_form"} do %>
	<%= text_field_tag :value, 0 %><%= submit_tag :Adjust %>
	<%- end %>
<%- end %>
 USD</p>

<p>Cost per hour: <%= number_with_delimiter number_with_precision(@community.cost_per_hour, 2) %> USD</p>
